<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Mizuu.Theme.NoBackground" parent="@style/Mizuu.Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Mizuu.Theme.Transparent" parent="@style/Mizuu.Theme">
    </style>

    <style name="Mizuu.Theme.Transparent.FullScreen" parent="@style/Mizuu.Theme.Transparent">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Mizuu.Theme.Translucent" parent="@style/Mizuu.Theme">
    </style>

    <style name="Mizuu.Theme.Translucent.FullScreen" parent="@style/Mizuu.Theme.Translucent">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Mizuu.Theme.Base" parent="Theme.AppCompat">
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:editTextStyle">@style/RobotoEditTextStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>
        <item name="actionOverflowButtonStyle">@style/Mizuu.Theme.ActionButton.Overflow</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorControlNormal">#aaffffff</item>
        <item name="colorControlActivated">#fff</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="colorSwitchThumbNormal">#b0b0b0</item>
    </style>

    <style name="Mizuu.Theme.Overview" parent="Mizuu.Theme" >

    </style>

    <style name="Mizuu.Theme" parent="Mizuu.Theme.Base">

    </style>

    <style name="Mizuu.Theme.ActionButton.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CheckBoxAppTheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Theme for cancel library update dialog and such -->
    <style name="Mizuu.Theme.Transparent.Dialog" parent="android:Theme.Holo">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Mizuu.Theme.Preference" parent="android:Theme.Holo">
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:editTextStyle">@style/RobotoEditTextStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>
        <item name="android:actionOverflowButtonStyle">@style/Mizuu.Theme.ActionButton.Overflow</item>
        <item name="android:actionBarStyle">@style/Mizuu.Theme.Preference.ActionBar</item>
    </style>

    <style name="Mizuu.Theme.Preference.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#aa000000</item>
    </style>

    <style name="Button.RightAligned" parent="android:style/Widget.Holo.Button">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="Mizuu.Theme.Dialog" parent="android:style/Theme.Holo.Dialog" />

</resources>